rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonction helper pour vérifier si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Collection users - Seulement les utilisateurs authentifiés
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }
    
    // Collection services - Lecture publique, écriture pour authentifiés
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection team - Lecture publique, écriture pour authentifiés
    match /team/{memberId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection processes - Lecture publique, écriture pour authentifiés
    match /processes/{stepId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection testimonials - Lecture publique, écriture pour authentifiés
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection announcements - Lecture publique, écriture pour authentifiés
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Collection messages - Création publique, lecture/modification pour authentifiés
    match /messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    
    // Collection consultations - Création publique, lecture/modification pour authentifiés
    match /consultations/{consultationId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    
    // Collection settings - Lecture publique, écriture pour authentifiés
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
